<% unless current_user == micropost %>
  <% if current_user.likes?(micropost) %>
    <%= form_for(current_user.favorites.find_by(like_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :like_id, micropost.id %>
      <%= f.submit 'unlike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :like_id, micropost.id %>
      <%= f.submit 'like!', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>